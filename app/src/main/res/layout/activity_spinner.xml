<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="200dp"
        android:text="Select Sports:"
        android:textSize="16sp" />

    <com.omanshuaman.tournamentsports.CustomSpinner
        android:id="@+id/spinner_fruits"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_spinner_fruit"
        android:dropDownVerticalOffset="40dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/ic_next_24"
        android:tint="@color/black"
        android:layout_below="@+id/spinner_fruits"
        android:id="@+id/next"
        app:backgroundTint="@color/quantum_lightblue"
        app:layout_anchorGravity="bottom|end|right"
        app:maxImageSize="28dp" />

</RelativeLayout>